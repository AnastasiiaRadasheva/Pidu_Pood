
@model project.Models.Kylaline
@{
    ViewBag.Title = "Tänan osalemise eest!";
}
<h2>Aitäh, @Model.Nimi</h2>
<p>Sinu vastus on edukalt salvestatud</p>
@if (Model.OnKutse)
{
    <p class="text-success ">
        <strong>Rõõm kuulda!Me ootame</strong>
    </p>


    <p><a href="@Url.Action("Index", "Home")">Tagasi</a></p>
    <div class="image-container">
        <img src="~/images/@ViewBag.Pilt" style=" width:200px;" />
    </div>
}
else
{
    <p class="text-danger ">
        <strong>Kahju, et ei saa tulla</strong>
    </p>


    <p><a href="@Url.Action("Index", "Home")">Tagasi</a></p>
    <div class="image-container">
        <img src="~/images/@ViewBag.Pilt2" style=" width:200px;" />
    </div>
}



<p>Ootame/Ei oota sind üritusel!</p>





<p><a href="@Url.Action("Index", "Home")">Tagasi</a></p>
@Html.ActionLink("Tagasi", "Index", "Home", null, new { @class = "btn btn-default" })